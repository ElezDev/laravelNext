{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // Asegúrate de tener esta línea
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["app/src/components/*"], // Agrega esta línea
      "@lib/*": ["app/src/lib/*"] // Ya debería estar en tu configuración
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/(auth)/register/page.js", "app/components/Button.js", "app/(auth)/login/page.js"],
  "exclude": ["node_modules"]
}
